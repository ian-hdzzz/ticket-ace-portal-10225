generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id                       String   @id @default(uuid())
  correo                   String   @unique
  contrasena               String
  nombre_completo          String
  telefono                 String
  activo                   Boolean  @default(true)
  fecha_creacion           DateTime @default(now())
  fecha_actualizacion      DateTime @updatedAt
  contrasena_es_temporal   Boolean  @default(false)

  roles UsuarioRol[]

  @@map("usuarios")
}

model Rol {
  id                    String    @id @default(uuid())
  nombre                String    @unique
  descripcion           String
  nivel_jerarquico      Int
  activo                Boolean   @default(true)
  fecha_creacion        DateTime  @default(now())
  fecha_actualizacion   DateTime  @updatedAt

  privilegios           RolPrivilegio[]
  usuarios              UsuarioRol[]

  @@map("roles")
}

model Privilegio {
  id          String    @id @default(uuid())
  descripcion String    @unique
  
  roles       RolPrivilegio[]

  @@map("privilegios")
}

model UsuarioRol {
  id_usuario          String
  id_rol              String
  asignado_por        String
  fecha_asignacion    DateTime  @default(now())

  usuario Usuario @relation(fields: [id_usuario], references: [id], onDelete: Cascade)
  rol     Rol     @relation(fields: [id_rol], references: [id], onDelete: Cascade)

  @@id([id_usuario, id_rol])
  @@map("usuario_roles")
}

model RolPrivilegio {
  id_rol         String
  id_privilegio  String

  rol        Rol        @relation(fields: [id_rol], references: [id], onDelete: Cascade)
  privilegio Privilegio @relation(fields: [id_privilegio], references: [id], onDelete: Cascade)

  @@id([id_rol, id_privilegio])
  @@map("rol_privilegios")
}
