# Multi-stage build for Frontend
# Stage 1: Build the application
FROM node:20-alpine AS builder

# Set working directory
WORKDIR /app

# Build arguments for Vite (required at build time)
ARG VITE_SUPABASE_URL
ARG VITE_SUPABASE_ANON_KEY
ARG VITE_CEA_REST_URL
ARG VITE_CEA_SOAP_CONTRACT_URL
ARG VITE_CEA_SOAP_WORKORDER_URL
ARG VITE_CEA_SOAP_METER_URL
ARG VITE_CEA_SOAP_DEBT_URL
ARG VITE_CEA_SOAP_READINGS_URL
ARG VITE_CEA_SOAP_RECEIPT_URL
ARG VITE_CEA_API_USERNAME
ARG VITE_CEA_API_PASSWORD
ARG VITE_API_URL

# Set environment variables for Vite build
ENV VITE_SUPABASE_URL=$VITE_SUPABASE_URL
ENV VITE_SUPABASE_ANON_KEY=$VITE_SUPABASE_ANON_KEY
ENV VITE_CEA_REST_URL=$VITE_CEA_REST_URL
ENV VITE_CEA_SOAP_CONTRACT_URL=$VITE_CEA_SOAP_CONTRACT_URL
ENV VITE_CEA_SOAP_WORKORDER_URL=$VITE_CEA_SOAP_WORKORDER_URL
ENV VITE_CEA_SOAP_METER_URL=$VITE_CEA_SOAP_METER_URL
ENV VITE_CEA_SOAP_DEBT_URL=$VITE_CEA_SOAP_DEBT_URL
ENV VITE_CEA_SOAP_READINGS_URL=$VITE_CEA_SOAP_READINGS_URL
ENV VITE_CEA_SOAP_RECEIPT_URL=$VITE_CEA_SOAP_RECEIPT_URL
ENV VITE_CEA_API_USERNAME=$VITE_CEA_API_USERNAME
ENV VITE_CEA_API_PASSWORD=$VITE_CEA_API_PASSWORD
ENV VITE_API_URL=$VITE_API_URL

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Build the application
RUN npm run build

# Stage 2: Serve with nginx
FROM nginx:alpine

# Copy custom nginx config with Chatwoot reverse proxy
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Copy built assets from builder stage
COPY --from=builder /app/dist /usr/share/nginx/html

# Expose port 8080 (Cloud Run requirement)
EXPOSE 8080

# Start nginx
CMD ["nginx", "-g", "daemon off;"]
